<% include partials/header %>
<center><a href="/<%= code %>"><h1 class="center">/<%= code %>/ - <%= name %></h1></a></center>

<center>
    <form action="/thread/create" method="POST" id="makepost">
        <h1>Create thread</h1>
        <table id="postForm" class="postForm">
            <input type='hidden' name='code' value="<%= code %>" />
            <tr><td>Thread Name</td><td><input name='threadName' type='text' value='' /></td></tr>
            <tr><td>Username</td><td><input name='name' type='text' value='' /></td></tr>
            <tr><td>Tripcode</td><td><input name='trip' type='text' value='' /></td></tr>
            <tr><td>Comment</td><td><textarea name='content' rows='6' cols='48'></textarea></td></tr>
            <tr><td><input type='submit' name='submit' value='Post'></td></tr>
        </table>
    </form>
</center>

<% threads.forEach(function(thread){ %>
    <center>
        <h4><a href="/thread/<%= thread._id%>"><%= thread.name %></a></h4>
    </center>
    <center><h4>Created on <%= thread.creation %></h4></center>
<% }) %>
<% include partials/footer %>
